# Production Environment Configuration
# Copy this to .env for production deployment

# Environment
ENVIRONMENT=production
DEBUG=false

# Security
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_256_BIT_RANDOM_SECRET
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1

# Database
MONGODB_URL=mongodb://localhost:27017/cricket_auction
# For production, use MongoDB Atlas or replica set:
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/cricket_auction?retryWrites=true&w=majority

# Redis (for session storage and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Server
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security
ENABLE_RATE_LIMITING=true
ENABLE_IP_WHITELIST=false
ADMIN_IP_WHITELIST=

# Cookies (MUST be true in production with HTTPS)
COOKIE_SECURE=true
COOKIE_SAMESITE=strict
COOKIE_DOMAIN=.yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/auction/app.log

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@yourdomain.com

# Backup
BACKUP_ENABLED=true
BACKUP_PATH=/backups/cricket_auction
BACKUP_RETENTION_DAYS=30
